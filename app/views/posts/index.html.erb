<h1>Main page</h1>
<table class="table">
    <thead>
        <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Body</th>
        <th scope="col">Comments</th>
        <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
    <% @post.each do |post| %>
        <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.comments %></td>
        <td><%= link_to "Read", post_path(post), :class => 'btn btn-info' %></td>
        </tr>
    <% end %>
    </tbody>
</table>