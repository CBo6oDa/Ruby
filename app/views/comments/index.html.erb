<h1>comment page</h1>
<table class="table">
    <thead>
        <tr>
        <th scope="col">username</th>
        <th scope="col">Comment</th>
        </tr>
    </thead>
    <tbody>
    <% @comments.each do |comment| %>
        <tr>
        <td><%= comment.username %></td>
        <td><%= comment.body %></td>
        </tr>
    <% end %>
    </tbody>
</table>